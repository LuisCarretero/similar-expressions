{
  "model": {
    "encoder": {
      "size_hidden": 256,
      "conv_size": "large"
    },
    "z_size": 128,
    "decoder": {
      "size_hidden": 64,
      "rnn_type": "lstm"
    },
    "value_decoder": {
      "conv_size": "large"
    },
    "io_format": {
      "seq_len": 15,
      "token_cnt": 10,
      "val_points": 100
    }
  },
  "training": {
    "batch_size": 128,
    "epochs": 1,
    "valid_split": 0.1,
    "dataset_len_limit": 2048,
    "criterion": {
      "ae_weight": 0.4,
      "kl_weight": 0.1,
      "syntax_weight": 0.5
    },
    "sampling": {
      "prior_std": 1,
      "eps": 1e-2
    },
    "optimizer": {
      "lr": 4e-3,
      "clip": 5.0,
      "scheduler_factor": 0.2,
      "scheduler_patience": 2,
      "scheduler_threshold": 1e-3,
      "scheduler_min_lr": 1e-5
    },
    "kl_anneal": {
      "schedule": "sigmoid",
      "midpoint": 0.4,
      "steepness": 15
    },
    "values_init_bias": false,
    "use_grammar_mask": false
  }
}